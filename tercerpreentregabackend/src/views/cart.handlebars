<div>
    <h1>Tu Carrito</h1>
    {{#if cart.products.length}}
        <ul>
            {{#each cart.products}}
                <li>
                    <p>Producto: {{this.product_id.title}}</p>
                    <p>Precio: {{this.product_id.price}}</p>
                    <p>Cantidad: {{this.quantity}}</p>
                </li>
            {{/each}}
        </ul>
        <form action="/api/carts/{{cart._id}}/complete-purchase" method="post">
            <button type="submit">Finalizar Compra</button>
        </form>
    {{else}}
        <p>Tu carrito está vacío</p>
    {{/if}}
</div>

